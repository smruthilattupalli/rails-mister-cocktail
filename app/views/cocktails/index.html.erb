<div class="list">
  <h1>COCKTAILS</h1>

  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo %>
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
            <%= cocktail.name %>
          </div>
        <% end %>
      <% else %>
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1574579804640-a15fecaeda35?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80')">
            <%= cocktail.name %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>


